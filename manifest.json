

{
    "manifest_version": 3,
    "name": "thon",
    "version": "1.0", 
    "description": "hackathon project",
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["app.js", "background.js"],
          "css": ["style.css"]
        }
      ],
      "action": {
        "default_popup": "index.html"
      }, 
      "permissions": ["<all_urls>", "tabs", "activeTab", "downloads"]
  }
  